@model ReservaTicket.Models.Usuario

@{
    ViewData["Title"] = "Login";
}




<div class="row">
    <div class="col-md-6 offset-md-3">
    <form asp-action="Login" class="my-4 p-4 border rounded">
    <div class="form-group">
        <label asp-for="Mail" class="form-group">Correo electronico</label>
        <input asp-for="Mail" class="form-control" />
        <span asp-validation-for="Mail" class="text-danger"></span>
    </div>

        <div class="form-group">
            <label asp-for="contrasenia" class="form-group">Contraseña</label>
                <input asp-for="contrasenia" type="password" class="form-control" />
            <span asp-validation-for="contrasenia" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <button type="submit" class="btn btn-outline-dark flex-shrink-0">Iniciar sesión</button>
        </div>


    </form>
    </div>
</div>


