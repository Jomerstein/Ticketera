<html>
<head>
    <title>Generador de Código QR</title>
</head>
<body>
    <h2>Imagen del Código QR</h2>
    @{
        using (MemoryStream ms = new MemoryStream())
        {
            Model.Save(ms, System.Drawing.Imaging.ImageFormat.Png); // Corrección aquí
            byte[] byteImage = ms.ToArray();
            string base64String = Convert.ToBase64String(byteImage);
            <img src="data:image/png;base64,@base64String" alt="Código QR" />
        }
        
      
    }
</body>
</html>



