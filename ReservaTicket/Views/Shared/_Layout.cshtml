<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ReservaTicket</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ReservaTicket.styles.css" asp-append-version="true" />
</head>
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<body>
    <!-- Responsive navbar-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Espectaculo" asp-action="Indexeado">Ticketera</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                  
                    
                  
                    @{
                        if (String.IsNullOrEmpty(@HttpContextAccessor.HttpContext.Session.GetString("elloco")))
                        {
                            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Error">Crear espectáculo</a></li>
                            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Error">Scanner</a></li>
                            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Create">Registrarse</a></li>
                            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Login">Iniciar Sesión</a></li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Espectaculo" asp-action="Create">Crear espectáculo</a></li>
                            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Scanner">Scanner</a></li>
                            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Logout"> Cerrar Sesión</a></li>
                        }
                    }
                    
                </ul>
            </div>
        </div>
    </nav>
    <!-- Page header with logo and tagline-->
    
    <!-- Page content-->
    <div class="container">
        @RenderBody()
    </div>
    <!-- Footer-->
    <footer class="py-5 bg-dark">
        <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Your Website 2023</p></div>
    </footer>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    
    <script src="js/scripts.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
